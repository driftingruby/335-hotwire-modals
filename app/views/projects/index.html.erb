<h1>Project</h1>

<table class='table'>
  <thead>
    <th>Name</th>
    <th>Description</th>

    <th colspan=3>Actions</th>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>

        <td><%= link_to "Show", project_path(project) %></td>
        <td><%= link_to "Edit", edit_project_path(project), "data-controller": "turbo" %></td>
        <td>
          <%= link_to "Delete", project_path(project),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New project", new_project_path, "data-controller": "turbo" %>